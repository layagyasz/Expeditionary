[
  {
    "$id": "base-container",
    "Default": {
      "BackgroundColor": [ "#121212ff" ],
      "BackgroundShader": "shader-ui",
      "CornerRadius": [ [ 8, 8 ] ]
    }
  },
  {
    "$id": "base-block",
    "Default": {
      "BackgroundColor": [ "#ffffff1c" ],
      "BackgroundShader": "shader-ui",
      "CornerRadius": [ [ 8, 8 ] ]
    }
  },
  {
    "$id": "base-span",
    "Default": {
      "BackgroundColor": [ "#ffffff00" ],
      "BackgroundShader": "shader-ui",
      "FontFace": "font-syne-mono",
      "Color": "#ffffffdf",
      "Shader": "shader-default",
      "DisableScissor": true
    }
  },
  {
    "$id": "base-button",
    "Default": {
      "Size": [ "DynamicContents", 24 ],
      "Margin": [ 1 ],
      "Padding": [ 2 ],
      "CornerRadius": [ [ 12, 12 ] ],
      "BackgroundColor": [ "#ffcc80ff" ],
      "BorderWidth": [ 1 ],
      "BorderColor": [ "#ffffff00" ],
      "BackgroundShader": "shader-ui",
      "DisableScissor": true
    },
    "States": [
      {
        "State": [ "Hover" ],
        "Attributes": {
          "BackgroundColor": [ "#ffb74dff" ]
        }
      },
      {
        "State": [ "Toggle" ],
        "Attributes": {
          "BorderColor": [ "#ffffffff" ]
        }
      }
    ]
  },
  {
    "$id": "base-button-image",
    "Default": {
      "Size": [ 20, 20 ],
      "BackgroundColor": [ "#ffffff00" ],
      "BackgroundShader": "shader-ui",
      "ForegroundColor": "#121212ff"
    }
  },
  {
    "$id": "base-button-text",
    "Parent": "base-span",
    "Default": {
      "Size": [ "DynamicContents", 32 ],
      "FontSize": 12,
      "Padding": [ 2 ],
      "Color": "#121212ff"
    }
  }
]